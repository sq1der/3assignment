<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/styleForAdmin.css">
</head>
<body>  
  <header>
    <h1>Панель администратора</h1>
    <nav>
      <ul>
        <li><a href="/" class="nav-button">Главная</a></li>
        <li><a href="/admin" class="active">Admin</a></li>
      </ul>
    </nav>
  </header>

  <main class="admin-panel">
    <!-- Добавление пользователя -->
    <section class="add-user">
      <h2>Добавить нового пользователя</h2>
      <form action="/admin/add" method="POST">
        <div class="form-group">
          <label for="username">Имя пользователя:</label>
          <input type="text" id="username" name="username" required />
        </div>
        
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
        </div>
        
        <div class="form-group">
          <label for="password">Пароль:</label>
          <input type="password" id="password" name="password" required />
        </div>
        
        <div class="form-group">
          <label for="isAdmin">
            <input type="checkbox" id="isAdmin" name="isAdmin" />
            Администратор
          </label>
        </div>
        
        <button type="submit" class="button">Добавить</button>
      </form>
    </section>

    <!-- Список пользователей -->
    <section class="user-list">
      <h2>Список пользователей</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th>Администратор</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.isAdmin ? 'Да' : 'Нет' %></td>
            <td>
              <!-- Форма удаления пользователя -->
              <form action="/admin/delete/<%= user._id %>" method="POST" style="display: inline;">
                <button type="submit" class="button danger">Удалить</button>
              </form>
              
              <!-- Форма редактирования пользователя -->
              <form action="/admin/edit/<%= user._id %>" method="POST" style="display: inline;">
                <input type="text" name="username" value="<%= user.username %>" required />
                <label>
                  <input type="checkbox" name="isAdmin" <%= user.isAdmin ? 'checked' : '' %> />
                  Администратор
                </label>
                <button type="submit" class="button">Обновить</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Управление товарами -->
    <div class="container">
      <h1>Управление товарами</h1>

      <!-- Форма для добавления нового товара -->
      <h2>Добавить новый товар</h2>
      <form action="/admin/items/add" method="POST">
        <input type="text" name="name" placeholder="Название" required>
        <input type="number" name="price" placeholder="Цена" required>
        <input type="text" name="imageUrl" placeholder="Ссылка на изображение">
        <textarea name="description" placeholder="Описание"></textarea>
        <button type="submit">Добавить товар</button>
      </form>

      <hr>

      <!-- Список товаров -->
      <h2>Список товаров</h2>
      <ul id="itemList">
        <% items.forEach(item => { %>
          <li>
            <strong><%= item.name %></strong> - <%= item.price %>₸
            <p><%= item.description %></p>
            <img src="<%= item.imageUrl %>" width="100" alt="Изображение">

            <!-- Форма для удаления товара -->
            <form action="/admin/items/delete/<%= item._id %>" method="POST" style="display: inline;">
              <button type="submit" class="button danger">❌ Удалить</button>
            </form>

            <!-- Форма для редактирования товара -->
            <form action="/admin/items/edit/<%= item._id %>" method="POST" style="display: inline;">
              <input type="text" name="name" value="<%= item.name %>" required>
              <input type="number" name="price" value="<%= item.price %>" required>
              <input type="text" name="imageUrl" value="<%= item.imageUrl %>">
              <textarea name="description"><%= item.description %></textarea>
              <button type="submit" class="button">✏️ Обновить</button>
            </form>
          </li>
        <% }) %>
      </ul>
    </div>
  </main>
</body>
</html>
